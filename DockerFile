FROM node:16 AS builder

COPY package*.json .

RUN npm update

# Better to use npm ci to intall all deps from fresh instead of using cached
# RUN npm install
RUN npm ci

##############################################
# App stage #
FROM node:16-alpine

# The WORKDIR command is used to define the working directory of a Docker container at any given time.
WORKDIR /usr/src/app

COPY . .

EXPOSE 3000

CMD ["npm", "run", "dev"]
